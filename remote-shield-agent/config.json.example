{
  "backend_url": "http://localhost:8000",
  "hostname": "vps-prod-1",
  "scan_interval_seconds": 300,
  "heartbeat_interval_seconds": 60,
  "modules": {
    "port_scanner": true,
    "process_monitor": true,
    "file_integrity": true,
    "log_analyzer": true,
    "cve_scanner": true
  },
  "min_severity": 5,
  "baseline_ports": [
    22,
    80,
    443,
    53,
    25,
    587,
    110,
    143,
    3306,
    5432
  ],
  "critical_files": [
    "/etc/passwd",
    "/etc/shadow",
    "/etc/sudoers",
    "/etc/ssh/sshd_config",
    "/root/.ssh/authorized_keys",
    "/root/.bashrc",
    "/etc/cron.d",
    "/etc/hosts"
  ],
  "auth_log_path": "/var/log/auth.log"
}
